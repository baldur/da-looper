<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">Da Looper</string>
    <style name="RecordButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:textOff">Record</item>
        <item name="android:textOn">Stop Recording</item>
        <item name="android:background">@drawable/button_black</item>
    </style>
    <style name="PlayButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:tag">unused</item>
        <item name="android:background">@drawable/play_button</item>
    </style>
    <style name="MuteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:tag">unused mute button</item>
        <item name="android:textOff">mute</item>
        <item name="android:textOn">muted</item>
    </style>
    <style name="SeekBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:tag">unused progressbar</item>
    </style>
</resources>
